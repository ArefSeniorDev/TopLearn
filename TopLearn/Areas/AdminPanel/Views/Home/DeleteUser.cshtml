@using TopLearn.Core.Convertors
@using TopLearn.Core.DTOs.UserViewModel;
@model InformationUserViewModel
@{
    ViewData["Title"] = "حذف کاربر";
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف کاربر
        </div>
        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="UserId" value="@ViewBag.UserId.ToString()"/>
                
                <dl class="dl-horizontal">
                    <dt>نام کاربری : </dt>
                    <dd>@Model.UserName</dd>
                    <dt>ایمیل : </dt>
                    <dd>@Model.Email</dd>
                    <dt>موجودی کیف پول  : </dt>
                    <dd>@Model.Wallet</dd>
                    <dt>تاریخ عضویت : </dt>
                    <dd>@Model.RegisterDate.ToShamsi()</dd>
                    <dt></dt>
                    <dd>
                        <input type="submit" value="حذف" class="btn btn-danger"/>
                    </dd>
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>


