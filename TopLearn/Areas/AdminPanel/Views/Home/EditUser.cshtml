@using TopLearn.Core.DTOs.UserViewModel;
@using TopLearn.DataLayer.Entities.User;
@model EditUserViewModel
@{
    ViewData["Title"] = "ویرایش کاربر";

    List<Role> Roles = ViewBag.Roles as List<Role>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کاربر</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert-success">
                با موفقیت ویرایش شد
            </div>
        }

        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="AvatarName" />
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" asp-for="UserName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>ایمیل</label>
                        <input type="email" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>کلمه عبور</label>
                        <input type="text" asp-for="Password" class="form-control">
                        <p class="help-block">
                            در صورت تغییر کلمه عبور کلمه عبور کاربر تغییر میکند برای تغییر ندادن فیلد را خالی بزارید
                        </p>
                    </div>
                    <div class="form-group">
                        <label>انتخاب نقش کاربر</label>
                        @foreach (var item in Roles)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="SelectedRoles" value="@item.RoleId" @((Model.UserRoles.Any(x => x == item.RoleId)?"checked":""))>@item.RoleTitle
                                </label>
                            </div>
                        }

                    </div>
                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-outline btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر پروفایل
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <img id="imgAvatar" class="thumbnail" src="/UserAvatar/@Model.AvatarName" />
                    <div class="form-group">
                        <label>انتخاب تصویر</label>
                        <input type="file" asp-for="UserAvatar">
                    </div>
                </div>

                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>

@section Scripts
    {
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#UserAvatar").change(function () {
            readURL(this);
        });
    </script>
}
