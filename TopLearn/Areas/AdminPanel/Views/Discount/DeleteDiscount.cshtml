@using TopLearn.Core.Convertors;
@using TopLearn.DataLayer.Entities.Order;
@model Discount
@{
    ViewData["Title"] = "DeleteDiscount";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف کد </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="DiscountId"/>

        <div class="form-group">
            <label>کد تخفیف </label>
            <input readonly asp-for="DiscountCode" class="form-control">
        </div>
        <div class="form-group">
            <label>درصد کد تخفیف </label>
            <input readonly asp-for="DiscountPercent" class="form-control">
        </div>
        <div class="form-group">
            <label>تعداد </label>
            <input readonly asp-for="UsableCount" class="form-control">
        </div>
        <div class="form-group">
            <label>تاریخ شروع </label>
            <input id="stDate" name="stDate" readonly value="@((Model.StartTime!=null)?Model.StartTime.Value.ToShamsi():"")" />
        </div>
        <div class="form-group">
            <label>تاریخ پایان </label>
            <input id="edDate" name="edDate" readonly value="@((Model.EndTime!=null)?Model.EndTime.Value.ToShamsi():"")" />
        </div>
        <input type="submit" value="حذف" class="btn btn-danger"  />

    </form>
</div>

@section Scripts
{
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="/js/kendo.all.min.js"></script>
    <script>
        // create DatePicker from input HTML element
        $("#stDate").kendoDatePicker();
        $("#edDate").kendoDatePicker();
    </script>


}
