@using TopLearn.DataLayer.Entities.Course;
@model IEnumerable<CourseGroup>
<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var Group in Model.Where(x => x.ParentId == null))
                {
                    <li>
                        <a href="#">@Group.GroupTitle</a>
                        @if (Model.Any(x => x.ParentId == Group.GroupId))
                        {
                            <ul>
                                @foreach (var Sub in Model.Where(x => x.ParentId == Group.GroupId))
                                {
                                    <li><a href="#">@Sub.GroupTitle</a></li>
                                }
                            </ul>
                        }

                    </li>

                }
            </ul>
        </nav>
    </div>
</div>